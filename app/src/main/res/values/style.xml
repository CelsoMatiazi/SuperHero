    <!--Lemon-->
    <style name="lemon_14_bold" parent="">
        <item name="android:textColor">@color/lemon</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Red-->
    <style name="red_12_regular" parent="">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="red_18_bold" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="red_12_bold" parent="">
        <item name="android:textSize">12sp</item>
