<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Estilos originais do projeto-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>
    <style name="ImageBorder" parent="">
        <item name="cornerSize">15dp</item>
    </style>
    <style name="ImageCircle" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="iconBackCircle" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <!--Estilos extraídos do Figma, para uso no aplicativo; a nomenclatura é dada por: corElemento_tamanhoFonte_estiloFonte-->
    <!--White-->
    <style name="white_18_bold" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="white_36_bold" parent="">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="white_12_regular" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Amber-->
    <style name="amber_36_bold" parent="">
        <item name="android:textColor">@color/amber</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
