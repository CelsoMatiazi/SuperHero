<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="15dp"
    tools:context=".ui.home.user_settings.HelpActivity">

    <ImageView
        android:id="@+id/help_back_btn"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_icon_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

    />


    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajuda"
        style="@style/white_18_bold"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@id/help_back_btn"
        app:layout_constraintTop_toTopOf="@id/help_back_btn"
        android:layout_marginStart="20dp"

    />

    <TextView
        android:id="@+id/help_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/help_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:text="SuperHero"
        style="@style/white_18_bold"
        android:layout_marginTop="20dp"
    />

    <TextView
        android:id="@+id/help_item_1_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/help_item_1"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/gray_13_regular"
        android:text="Uma loja virtual de quadrinhos da marvel, onde Ã© possivel navegar por diversos titulos, personagens, pesquisar e favoritar seus quadrinhos favoritos."

    />

</androidx.constraintlayout.widget.ConstraintLayout>