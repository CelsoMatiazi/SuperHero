<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.user_settings.SecretActivity"
    android:padding="15dp"
    >





    <ImageView
        android:id="@+id/secret_back_btn"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_icon_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/secret_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Heroes"
        style="@style/white_18_bold"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@id/secret_back_btn"
        app:layout_constraintTop_toTopOf="@id/secret_back_btn"
        android:layout_marginStart="20dp"
    />


    <View
        android:id="@+id/secret_header_bar_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/amber"
        app:layout_constraintTop_toBottomOf="@id/secret_back_btn"
        android:layout_marginTop="20dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masters of the Universe"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/secret_header_bar_1"
        app:layout_constraintStart_toStartOf="@id/secret_header_bar_1"
        app:layout_constraintEnd_toEndOf="@id/secret_header_bar_1"
        app:layout_constraintBottom_toBottomOf="@id/secret_header_bar_1"
    />


    <FrameLayout
        android:id="@+id/panic_frame_1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@id/secret_header_bar_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/panic_frame_2"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/panic_circle_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/panic_img_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:shapeAppearanceOverlay="@style/ImageCircle"
            android:layout_gravity="center"
        />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/panic_frame_1"
        app:layout_constraintStart_toStartOf="@id/panic_frame_1"
        app:layout_constraintEnd_toEndOf="@id/panic_frame_1"
        android:text="Denis Rocha"
        android:textColor="@color/amber"
    />


    <FrameLayout
        android:id="@+id/panic_frame_2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="@id/panic_frame_1"
        app:layout_constraintBottom_toBottomOf="@id/panic_frame_1"
        app:layout_constraintStart_toEndOf="@id/panic_frame_1"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <ImageView
            android:id="@+id/panic_circle_2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/panic_img_2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:shapeAppearanceOverlay="@style/ImageCircle"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/panic_frame_2"
        app:layout_constraintStart_toStartOf="@id/panic_frame_2"
        app:layout_constraintEnd_toEndOf="@id/panic_frame_2"
        android:text="Jônatas Araujo"
        android:textColor="@color/amber"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are the best!!!"
        android:textColor="@color/amber"
        app:layout_constraintTop_toBottomOf="@id/panic_frame_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
    />



    <View
        android:id="@+id/secret_header_bar_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/lightGreen"
        app:layout_constraintTop_toBottomOf="@id/panic_frame_1"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Students"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/secret_header_bar_2"
        app:layout_constraintStart_toStartOf="@id/secret_header_bar_2"
        app:layout_constraintEnd_toEndOf="@id/secret_header_bar_2"
        app:layout_constraintBottom_toBottomOf="@id/secret_header_bar_2"
        />



    <FrameLayout
        android:id="@+id/panic_frame_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/secret_header_bar_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/panic_frame_4"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/panic_circle_3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/panic_img_3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:shapeAppearanceOverlay="@style/ImageCircle"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/panic_frame_3"
        app:layout_constraintStart_toStartOf="@id/panic_frame_3"
        app:layout_constraintEnd_toEndOf="@id/panic_frame_3"
        android:text="Celso Matiazi"
        android:textColor="@color/amber"
        />


    <FrameLayout
        android:id="@+id/panic_frame_4"
        android:layout_width="150dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="@id/panic_frame_3"
        app:layout_constraintBottom_toBottomOf="@id/panic_frame_3"
        app:layout_constraintStart_toEndOf="@id/panic_frame_3"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <ImageView
            android:id="@+id/panic_circle_4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/panic_img_4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:shapeAppearanceOverlay="@style/ImageCircle"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/panic_frame_4"
        app:layout_constraintStart_toStartOf="@id/panic_frame_4"
        app:layout_constraintEnd_toEndOf="@id/panic_frame_4"
        android:text="André Franzoi"
        android:textColor="@color/amber"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

